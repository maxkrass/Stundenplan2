<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data>

		<import type="com.maxkrass.stundenplan.objects.Teacher" />

		<variable
			name="teacher"
			type="Teacher" />
	</data>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingEnd="16dp"
		android:paddingStart="16dp"
		android:paddingTop="8dp">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start|bottom"
				android:layout_marginBottom="8dp"
				android:src="@drawable/ic_call_24dp" />

			<android.support.design.widget.TextInputLayout
				android:id="@+id/teacher_phone_til"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="56dp">

				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/teachers_phone"
					android:inputType="phone"
					android:text="@={teacher.phone}" />

			</android.support.design.widget.TextInputLayout>

		</FrameLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start|bottom"
				android:layout_marginBottom="8dp"
				android:src="@drawable/ic_mail_24dp" />

		<android.support.design.widget.TextInputLayout
			android:id="@+id/teacher_email_til"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="56dp">

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/teachers_email"
				android:inputType="textEmailAddress"
				android:text="@={teacher.email}" />

		</android.support.design.widget.TextInputLayout>

		</FrameLayout>

	</LinearLayout>
</layout>